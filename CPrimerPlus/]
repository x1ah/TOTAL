#include <stdio.h>
#define UNIT 60
int main (void)
{
    float second;
    int hour, min;
    float temp;

    while (1)
    {
        printf ("Input the second: ");
        scanf ("%f", &second);
        while (second > 0)
        {
            hour = (int) second / (UNIT * UNIT);
            temp = (int) second % (UNIT * UNIT);
            min = (int) temp / UNIT;
            temp = second - hour * 3600 - min * UNIT;
            printf ("%fs is %d hours %d minute and %f second\n",second, hour, min, second);
            break;
        }
        while (second <= 0)
        {break;}
    }
}
